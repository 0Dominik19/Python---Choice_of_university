print("Witaj w programie, który pomoże Ci wybrać kierunek studiów w oparciu o wielkość miasta, zainteresowania lub "
      "wymarzony zawód!")
print("Odpowiedz na kilka pytań, a postaramy się pomóc w wyborze.")

miasto = input("W jakim pod względem wielkości mieście chciałbyś studiować? (małe/średnie/duże) ")
zainteresowania = input("Jakie są Twoje aktualne zainteresowania? ")
zawod = input("Jaki zawód chciałbyś wykonywać w przyszłości? ")

if miasto == "małe":
    if "programowanie" in zainteresowania.lower() or "informatyka" in zainteresowania.lower():
        if zawod.lower() == "programista" or zawod.lower() == "informatyk":
            print("Co powiesz na kierunek informatyka na następujacych uczelniach: Akademia Bialska Nauk Stosowanych "
                  "im. Jana Pawła II lub Akademia Nauk Stosowanych w Nowym Sączu?")
    elif "ekonomia" in zainteresowania.lower() or "rachunkowość" in zainteresowania.lower():
        if zawod.lower() == "ekonomista" or zawod.lower() == "księgowy":
            print("Co powiesz na kierunek ekonomia na następujacych uczelniach:: Uniwersytet "
                  "Technologiczno-Humanistyczny im. Kazimierza Pułaskiego w Radomiu lub Powiślańska Szkoła Wyższa?")
    else:
        print("Hmmm... chyba nie znalazłem dla Ciebie odpowiedniej uczelni.")

elif miasto == "średnie":
    if "historia" in zainteresowania.lower():
        if zawod.lower() == "historyk" or zawod.lower() == "archeolog":
            print("Co powiesz na kierunek historia na następujacych uczelniach: Uniwersytet w Białymstoku lub "
                  "Uniwersytet Humanistyczno - Przyrodniczy im. Jana Długosza w Częstochowie?")
    elif "sport" in zainteresowania.lower():
        if zawod.lower() == "sportowiec" or zawod.lower() == "wuefista":
            print("Co powiesz na kierunek wychowanie fizyczne na następujacych uczelniach: Akademia Wychowania "
                  "Fizycznego im.Eugeniusza Piaseckiego w Poznaniu – Filia w Gorzowie Wielkopolskim lub Akademia "
                  "Kaliska im. Prezydenta Stanisława Wojciechowskiego?")
    else:
        print("Hmmm... chyba nie znalazłem dla Ciebie odpowiedniej uczelni.")

elif miasto == "duże":
    if "medycyna" in zainteresowania.lower() and zawod.lower() == "lekarz":
        print("Co powiesz na kierunek medycyna na następujacych uczelniach: Warszawski Uniwersytet Medyczny lub "
              "Uniwersytet Jagielloński Collegium Medicum?")
    elif "prawo" in zainteresowania.lower() and zawod.lower() == "prawnik":
        print("Co powiesz na kierunek prawo na następujacych uczelniach: Uniwersytet Warszawski lub "
              "Uniwersytet Gdański?")
    else:
        print("Hmmm... chyba nie znalazłem dla Ciebie odpowiedniej uczelni.")

else:
    print("Hmmm... chyba nie znalazłem dla Ciebie odpowiedniej uczelni.")
